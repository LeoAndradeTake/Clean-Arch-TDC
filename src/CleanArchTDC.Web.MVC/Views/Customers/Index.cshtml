@model IEnumerable<CleanArchTDC.Application.ViewModels.CustomerViewModel>

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>

<div>
    <h2>
        @ViewData["Title"]
    </h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Novo Cadastro" class="fas fa-plus"></span> Novo Cadastro
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
           {
               <tr>
                   <td>
                       @Html.DisplayFor(modelItem => item.Name)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.BirthDate)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.Gender)
                   </td>
                   <td>
                       <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-warning">
                           <span class="fas fa-edit">Editar</span>
                       </a>
                       <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes" class="btn btn-primary">
                           <span class="fas fa-search">Detalhes</span>
                       </a>
                       <a asp-action="Delete" asp-route-id="@item.Id" title="Apagar" class="btn btn-danger">
                           <span class="fas fa-trash-alt">Apagar</span>
                       </a>
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>